{% for item in collections.sections %}
  {% if item.data.type === 'podcasts' %}
    <div id="podcasts" class="w-full min-h-screen flex flex-col justify-center items-center py-12">
      <div class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px:0">
        <h2 class="font-bold tracking-wider text-gray-800 text-4xl mb-4">{{ item.data.title }}</h2>
        <div class="font-light text-gray-800 text-xl mb-6">
          {{ item.templateContent | safe }}
        </div>
      </div>
      <div class="self-center w-full xl:w-4/5 flex flex-col sm:flex-row flex-wrap px-4">
        {% for item in podcasts.podcasts %}
          <a class="w-full sm:w-1/2 flex flex-row hover:shadow-lg hover:bg-blue-800 hover:bg-opacity-50 px-4 sm:px-8 py-6 sm:py-12" href="{{ item.link }}">
            <div class="w-1/3 xl:w-1/4">
              <img src="{{ item.icon }}" alt="{{ item.title }}" class="w-16 block sm:mx-auto">
            </div>
            <div class="w-2/3 xl:w-3/4">
              <h3 class="tracking-wide text-gray-800 font-bold text-2xl uppercase mb-2">{{ item.title }}</h3>
            </div>
          </a>
        {% endfor %}
      </div>
      <div class="flex flex-row w-full justify-center pt-6">
        <a class="px-10 py-2 text-gray-200 bg-gray-800 rounded-full shadow-md text-lg hover:bg-gray-800 hover:border-red" href="#events">Upcoming Events</a>
      </div>
    </div>
  {% endif %}
{% endfor %}